@model Pizzaplace.Models.Pizzas

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pizzas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PizzaName" class="control-label">Name of pizza</label>
                <input asp-for="PizzaName" class="form-control" />
                <span asp-validation-for="PizzaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrepareTime" class="control-label">Time to prepare (in minutes)</label>
                <input asp-for="PrepareTime" class="form-control" />
                <span asp-validation-for="PrepareTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PizzaPrice" class="control-label">Price of pizza</label>
                <input asp-for="PizzaPrice" class="form-control" step="0.01" type="number"/>
                <span asp-validation-for="PizzaPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
